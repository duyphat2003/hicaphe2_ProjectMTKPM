@using hicaphe2.Models
@model SANPHAM
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Chi tiết sản phẩm</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Trang chủ</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Chi tiết sản phẩm</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <div class="row">
        <div class="offset-md-1 col-md-4">
            <img style="width: 100%;" src="~/Images/@Model.Hinhminhhoa" alt="">
        </div>
        <div class="col-md-6 details">
            <h3>Tên sản phẩm: @Model.TenSP</h3>
            <p style="text-align: justify">
                <span style="font-weight: bold">Kích thước:</span> @Model.Kichthuoc
            </p>
            <p style="text-align: justify">
                <span style="font-weight: bold">Mô tả:</span> @Model.Mota
            </p>
            <p class="price">
                <span style="font-weight: bold">Giá bán:</span> <span style="color:red;">@Model.Dongia đồng/@Model.Donvitinh</span>
            </p>
            <style>
                .custom-btn {
                    background-color: #your-color; /* Replace #your-color with the color code you want to use */
                    color: #fff; /* Text color */
                    /* Add any additional styling properties you need */
                    border: none;
                    padding: 10px 20px;
                    cursor: pointer;
                    border-radius: 5px;
                }
            </style>

            <a class="btn btn-primary btn-lg custom-btn" href="@Url.Action("ThemSanPhamVaoGio", "GioHang", new{ MaSP = Model.MaSP })">
                Đặt mua
            </a>

        </div>
    </div>

    <!-- Products Start -->
    <div class="container-fluid py-5">
        <div class="text-center mb-4">
