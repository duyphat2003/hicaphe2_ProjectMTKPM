@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align: center">ĐĂNG NHẬP</h2>
<br />
<div class="row">

    <div class="offset-md-1 col-md-10">
        <h2 style="color: red;">@ViewBag.ThongBao</h2>
        @using (Html.BeginForm("DangNhap", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="dangnhap">Email:</label>
                @Html.TextBox("Email", null, new
                {
                    @class = "form-control",
                    @id =
                "dangnhap",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="matkhau">Mật khẩu:</label>
                @Html.Password("Matkhau", null, new
                {
                    @class = "form-control",
                    @id =
                "matkhau",
                    required = "required"
                })
            </div>
            <style>
                .custom-btn {
                    background-color: #your-color; /* Replace #your-color with the color code you want to use */
                    color: #fff; /* Text color */
                    /* Add any additional styling properties you need */
                    border: none;
                    padding: 1px 5px;
                    cursor: pointer;
                    border-radius: 5px;
                }
            </style>
            <button type="submit" class="btn btn-primary btn-lg custom-btn">ĐĂNG NHẬP</button>
        }
    </div>
</div>