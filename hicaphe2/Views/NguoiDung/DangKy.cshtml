@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("DangKy", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="name">Họ và Tên:</label>
                @Html.TextBox("HoTenKH", null, new
                {
                    @class = "form-control",
                    @id =
                "name",
                    required = "required"
                })
            </div>

            <div class="form-group">
                <label for="matkhau">Mật khẩu:</label>
                @Html.Password("Matkhau", null, new
                {
                    @class = "form-control",
                    @id =
                "matkhau",
                    required = "required"
                })
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBox("Email", null, new
                {
                    @class = "form-control",
                    @id =
                "email",
                    type = "email",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="diachi">Địa chỉ:</label>
                @Html.TextBox("DiachiKH", null, new
                {
                    @class = "form-control",
                    @id =
                "diachi"
                })
            </div>
            <div class="form-group">
                <label for="dienthoai">Điện thoại:</label>
                @Html.TextBox("SDT", null, new
                {
                    @class = "form-control",
                    @id =
                "dienthoai",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="ngaysinh">Ngày sinh:</label>
                @Html.TextBox("Ngaysinh", null, new
                {
                    @class = "form-control",
                    @id =
                "ngaysinh",
                    type = "date",
                    placeholder = "mm/dd/yyyy"
                })
            </div>
            <style>
                .custom-btn {
                    background-color: #your-color; /* Replace #your-color with the color code you want to use */
                    color: #fff; /* Text color */
                    /* Add any additional styling properties you need */
                    border: none;
                    padding: 1px 5px;
                    cursor: pointer;
                    border-radius: 5px;
                }
            </style>
            <button type="submit" class="btn btn-primary btn-lg custom-btn">ĐĂNG KÝ</button>
        }
    </div>
</div>